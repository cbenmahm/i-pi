<simulation verbosity="low">
  <output prefix="300K_032N_qcmd">
      <properties stride="40" filename="out"> [time{picosecond}, conserved, potential, kinetic_md, spring] </properties>
      <trajectory filename='pos' stride='40' format='xyz' bead='-8'> positions </trajectory>
      <trajectory filename='force' stride='40' format='xyz' bead='-8'> forces </trajectory>
  </output>
  <total_steps>40000</total_steps>
  <prng>
    <seed>87549</seed>
  </prng>
  <ffsocket name="driver" mode="unix" pbc="false" matching="any">
    <latency>0.001</latency>
    <address>pswater0</address>
  </ffsocket>
  <system>
    <initialize nbeads="32">
      <file mode="xyz"> init0.xyz </file>
      <velocities mode="thermal" units="kelvin"> 300 </velocities>
    </initialize>
    <forces>
            <force forcefield='driver'/>
    </forces>
    <ensemble>
      <temperature units="kelvin">300</temperature>
    </ensemble>
    <normal_modes>
       <frequencies style="pa-cmd" units="inversecm">[2000]</frequencies>
    </normal_modes>
    <motion mode="multi">
            <fixcom>False</fixcom>
    <motion mode="dynamics">
      <dynamics mode='qcmd' splitting="obabo">
    	<thermostat mode="pile_l">
           <tau units="femtosecond">100</tau>
           <pile_lambda> 0.5 </pile_lambda>
        </thermostat>
        <constraints>
            <nfree>1</nfree>
            <tol>1.0e-06</tol>
            <maxcycle>100</maxcycle>
        </constraints>
	   <timestep units="femtosecond"> 0.25</timestep>
     </dynamics>
    </motion>
  </motion>
  </system>
</simulation>
