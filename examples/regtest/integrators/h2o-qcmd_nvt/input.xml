<simulation verbosity="high">
  <output prefix="300K_64mol_032N_qcmd">
          <properties stride="4" filename="out"> [time{picosecond}, conserved, temperature{kelvin}, potential, kinetic_md, spring] </properties>
      <trajectory filename="xc" stride="20" format="xyz" cell_units='angstrom'> x_centroid{angstrom} </trajectory>
      <trajectory filename="pc" stride="20" format="xyz"> p_centroid </trajectory>
      <trajectory filename='pos' stride='20' format='xyz' cell_units='angstrom'> positions{angstrom} </trajectory>
      <checkpoint stride="200" overwrite="false" filename="chk"/>
  </output>
  <total_steps>1000</total_steps>
  <prng>
    <seed>87549</seed>
  </prng>
  <ffsocket name="driver" mode="inet" pbc="false">
    <address>localhost</address>
    <port> 31415 </port>
  </ffsocket>
  <system>
    <initialize nbeads="32">
      <file mode="xyz"> init.xyz </file>
      <velocities mode="thermal" units="kelvin"> 300 </velocities>
    </initialize>
    <forces>
            <force forcefield='driver'/>
    </forces>
    <ensemble>
      <temperature units="kelvin">300</temperature>
    </ensemble>
   <motion mode="multi">
    <motion mode="dynamics">
      <dynamics mode='qcmd' splitting="baoab">
    	<thermostat mode="pile_l">
           <tau units="femtosecond">100</tau>
           <pile_lambda> 0.5 </pile_lambda>
    	</thermostat>
	   <timestep units="femtosecond"> 0.25</timestep>
        <constraints>
                <tol> 1.0e-06</tol>
                <nfree> 3 </nfree>
                <maxcycle> 100 </maxcycle>
        </constraints>
     </dynamics>
    </motion>
  </motion>
  </system>
</simulation>
