<simulation verbosity='high'>
  <output prefix='simulation'>
    <properties stride='4' filename='out'>  [ step, time{picosecond}, conserved, temperature{kelvin}, kinetic_cv, potential, pressure_cv{megapascal}] </properties>
    <trajectory filename='pos' stride='4'> positions </trajectory>
  </output>
  <total_steps>40000</total_steps>
  <prng>
    <seed>32346</seed>
  </prng>
  <ffsocket name='lmpserial1' mode='unix'>
    <address>h2o-pimd+rpc_short</address>
  </ffsocket>
  <ffsocket name='lmpserial2' mode='unix'>
    <address>h2o-pimd+rpc_long</address>
  </ffsocket>
  <system>
    <initialize nbeads='8'>
      <file mode='pdb'> init.pdb </file>
      <velocities mode='thermal' units='kelvin'> 300 </velocities>
    </initialize>
    <forces>
        <force nbeads='8' forcefield='lmpserial1'> <beads_weight> [1.2,0.8,1.2,0.8,1.2,0.8,1.2,0.8] </beads_weight> </force>
        <force nbeads='8' forcefield='lmpserial2'> <beads_weight> [0.8,1.2,0.8,1.2,0.8,1.2,0.8,1.2] </beads_weight> </force>
    </forces>
    <motion mode='dynamics'>
      <dynamics mode='nvt'>
        <timestep units='femtosecond'> 0.25 </timestep>
        <thermostat mode='langevin'>
          <tau units='femtosecond'> 100 </tau>
        </thermostat>
      </dynamics>
    </motion>
    <ensemble>
      <temperature units='kelvin'> 300 </temperature>
    </ensemble>
  </system>
</simulation>
